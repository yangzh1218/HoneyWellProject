<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ball_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/ball_bg"
        android:contentDescription="@string/setting_desc"
        android:scaleType="matrix" />

    <ImageView
        android:id="@+id/ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ball_bg"
        android:layout_centerInParent="true"
        android:background="@drawable/ball"
        android:contentDescription="@string/setting_desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ball_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/common_loading" />

 

</RelativeLayout>