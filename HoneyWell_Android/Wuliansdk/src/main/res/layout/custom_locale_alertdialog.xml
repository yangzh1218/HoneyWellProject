<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/common_tip"
            android:textColor="@color/grey_1"
            android:textSize="@dimen/textsize_large" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/comfort_blue" />
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_big"
        android:maxHeight="@dimen/dp_300"
        android:scrollbars="vertical"
        android:text="@string/lan_request_setting"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_large" />
    <RadioGroup
        android:id="@+id/rg_locale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_big"
          android:layout_marginLeft="@dimen/margin_little"
        android:layout_marginRight="@dimen/margin_little"
        android:layout_marginTop="@dimen/margin_big"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_mainland"
            style="@style/locale_tab_bottom"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/selector_checkbox_toggle_hook"
            android:text="@string/setting_mainland" />

        <RadioButton
            android:id="@+id/rb_no_mainland"
            style="@style/locale_tab_bottom"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/selector_checkbox_toggle_hook"
            android:text="@string/setting_no_mainland" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background01" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_all_dialog_button_selector"
            android:text="@string/common_sure"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_middle" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/background01" />

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_all_dialog_button_selector"
            android:text="@string/common_cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_middle" />
    </LinearLayout>

</LinearLayout>