<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_custom_progressbar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_rect_all_trans_white"
    android:minHeight="100dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="5dip"
    android:paddingRight="5dip" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/setting_downloading_new_version"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_middle" />

    <View
        style="@style/img_divider_full"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp" />

    <ProgressBar
        android:id="@+id/update_progress"
        style="@style/progerssbar_horizontal"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/update_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="1M/4M"
        android:textColor="@color/black" />

    <View
        style="@style/img_divider_full"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp" />

    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height_min"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/selector_shape_round_rect_all_stroke"
        android:padding="5dp"
        android:text="@string/setting_cancel_download" />

</LinearLayout>