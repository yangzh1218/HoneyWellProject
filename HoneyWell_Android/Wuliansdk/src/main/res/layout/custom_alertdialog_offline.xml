<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/setting_device_offline"
            android:textColor="@color/grey_1"
            android:textSize="@dimen/textsize_large" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/comfort_blue" />

    <Button
        android:id="@+id/btn_refreshList"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_all_dialog_button_selector"
        android:text="@string/common_refresh_list"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_middle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background01" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_all_dialog_button_selector"
        android:text="@string/main_continue_watch"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_middle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background01" />

    <Button
        android:id="@+id/btn_wifi_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_all_dialog_button_selector"
        android:text="@string/config_wifi_input"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_middle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background01" />

    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_all_dialog_button_selector"
        android:text="@string/common_cancel"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_middle" />

</LinearLayout>