<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar_one_action" />
    <TextView 
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="visible"
        android:text="@string/digital_first_pwd"
        />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        >
        <EditText 
            android:id="@+id/et_first"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:inputType="numberPassword"
            android:background="@drawable/bg_square_edittext"
            android:maxLength="1"
            />
        <EditText 
            android:id="@+id/et_second"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:inputType="numberPassword"
            android:background="@drawable/bg_square_edittext"
            android:maxLength="1"
            />
        <EditText 
            android:id="@+id/et_third"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:inputType="numberPassword"
            android:background="@drawable/bg_square_edittext"
            android:maxLength="1"
            />
        <EditText 
            android:id="@+id/et_fourth"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:maxLength="1"
            android:layout_margin="2dp"
            android:inputType="numberPassword"
            android:background="@drawable/bg_square_edittext"
            />
        
    </LinearLayout>
    <TextView 
        android:id="@+id/tv_tips"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="visible"
        android:text="@string/digital_tip"
        android:textSize="@dimen/textsize_little"
        android:textColor="@color/grey"
        />
    <TextView 
        android:id="@+id/tv_forgetpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/digital_forget_pwd"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="@dimen/textsize_little"
        android:textColor="@color/grey"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:background="@color/grey"
        
        />

</LinearLayout>
