<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:orientation="vertical" >

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:background="@color/wifi_setting_gray" />

    <View
        android:id="@+id/head2"
        android:layout_width="2dp"
        android:layout_height="@dimen/wifi_flow_height"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="18dp"
        android:background="@color/wifi_setting_theme"
        android:visibility="gone" />

    <View
        android:id="@+id/head3"
        android:layout_width="2dp"
        android:layout_height="@dimen/wifi_flow_height"
        android:layout_below="@id/head2"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:background="@color/wifi_setting_theme"
        android:visibility="gone" />

    <View
        android:id="@+id/head4"
        android:layout_width="2dp"
        android:layout_height="@dimen/wifi_flow_height"
        android:layout_below="@id/head3"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:background="@color/wifi_setting_theme"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wifi_flow_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_step1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:background="@drawable/shape_gray_circle"
                android:gravity="center"
                android:text="@string/config_value1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_desc1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_wifi_next_step1"
                android:textColor="@color/wifi_setting_gray" />

            <ProgressBar
                android:id="@+id/pb_step1"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_step_result1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@drawable/pb_finish_success"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wifi_flow_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_step2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:background="@drawable/shape_gray_circle"
                android:gravity="center"
                android:text="@string/config_value2"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_desc2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_wifi_next_step2"
                android:textColor="@color/wifi_setting_gray" />

            <ProgressBar
                android:id="@+id/pb_step2"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_step_result2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@drawable/pb_finish_success"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wifi_flow_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_step3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:background="@drawable/shape_gray_circle"
                android:gravity="center"
                android:text="@string/config_value3"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_desc3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_wifi_next_step3"
                android:textColor="@color/wifi_setting_gray" />

            <ProgressBar
                android:id="@+id/pb_step3"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_step_result3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@drawable/pb_finish_success"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wifi_flow_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_step4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:background="@drawable/shape_gray_circle"
                android:gravity="center"
                android:text="@string/config_value4"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_desc4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_wifi_next_step4"
                android:textColor="@color/wifi_setting_gray" />

            <ProgressBar
                android:id="@+id/pb_step4"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_step_result4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@drawable/pb_finish_success"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>