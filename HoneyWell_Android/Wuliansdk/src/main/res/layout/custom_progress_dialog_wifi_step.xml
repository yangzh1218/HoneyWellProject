<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_progressdialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/shape_round_rect_all_trans_white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="@dimen/btn_height"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/help_info_pressed"
            android:drawableStart="@drawable/help_info_pressed"
            android:gravity="center_vertical"
            android:text="@string/setting_wifi_prompt"
            android:textSize="@dimen/textsize_small" />
    </LinearLayout>

    <ImageView style="@style/img_divider_full" />

    <RelativeLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="24dp" >

        <ProgressBar
            android:id="@+id/progress"
            style="@style/progerssbar_horizontal_rect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="120" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:text="@string/common_loading"
            android:textSize="@dimen/textsize_large"
            android:visibility="gone" />
    </RelativeLayout>

    <include
        android:layout_width="@dimen/dialog_width"
        android:layout_height="144dp"
        layout="@layout/layout_wifi_setting_flow_add_device_next_step" />

</LinearLayout>