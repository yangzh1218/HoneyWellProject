<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical" >

        <include layout="@layout/titlebar_general" />

        <ImageView

            android:id="@+id/iv_device_desc_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <LinearLayout style="@style/setting_middle_shape" >

            <TextView
                style="@style/setting_item_single_textview"
                android:text="@string/setting_detail_device_type" />

            <TextView
                android:id="@+id/tv_device_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />

        <LinearLayout style="@style/setting_middle_shape" >

            <TextView
                style="@style/setting_item_single_textview"
                android:text="@string/setting_detail_device_id" />

            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />

        <LinearLayout style="@style/setting_middle_shape" >

            <TextView
                style="@style/setting_item_single_textview"
                android:text="@string/setting_detail_device_version" />

            <TextView
                android:id="@+id/tv_device_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />

        <LinearLayout
            android:id="@+id/ll_device_detail_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:orientation="vertical">

            <LinearLayout style="@style/setting_middle_shape" >

                <TextView
                    style="@style/setting_item_single_textview"
                    android:text="@string/setting_detail_device_wifi" />

                <TextView
                    android:id="@+id/tv_linked_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/textsize_large" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background" />

            <LinearLayout style="@style/setting_middle_shape" >

                <TextView
                    style="@style/setting_item_single_textview"
                    android:text="@string/setting_detail_device_wifi_signal" />

                <TextView
                    android:id="@+id/tv_linked_wifi_strength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/textsize_large" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background" />

            <LinearLayout style="@style/setting_middle_shape" >

                <TextView
                    style="@style/setting_item_single_textview"
                    android:text="@string/setting_detail_device_wifi_ip" />

                <TextView
                    android:id="@+id/tv_linked_wifi_ip_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/textsize_large" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background" />

            <LinearLayout style="@style/setting_middle_shape" >

                <TextView
                    style="@style/setting_item_single_textview"
                    android:text="@string/setting_detail_device_wifi_mac" />

                <TextView
                    android:id="@+id/tv_linked_wifi_mac_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/textsize_large" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>