<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/white_pressed" />

            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp"></corners>
        </shape></item>
    <item android:state_focused="true"><shape>
            <solid android:color="@color/white_pressed" />
            <!-- 即使同色也不要直接引用，重新定义一个颜色变量，便于维护 -->
            <!-- <stroke android:width="1dp" android:color="@color/btn_rect_color_focused_stroke" /> -->

            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp"></corners>
        </shape></item>
    <item><shape>
            <solid android:color="@color/white_normal" />

            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp"></corners>
        </shape></item>

</selector>