<?xml version="1.0" encoding="utf-8"?>
<!-- 青蓝色Button -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:radius="5dp"></corners>

            <padding android:bottom="@dimen/margin_normal" android:top="10dp" />

            <solid android:color="@color/cyanine_press_color" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/cyanine_color" />

            <padding android:bottom="@dimen/margin_normal" android:top="10dp" />

            <corners android:radius="5dp"></corners>
        </shape></item>

</selector>