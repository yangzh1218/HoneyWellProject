<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/btn_rect_color_pressed_solid" />

            <stroke android:width="1dp" android:color="@color/btn_rect_color_focused_stroke" />

            <corners android:radius="20dp"></corners>
        </shape></item>
    <item android:state_focused="true"><shape>
            <solid android:color="@color/btn_rect_color_focused_solid" />

            <stroke android:width="1dp" android:color="@color/btn_rect_color_focused_stroke" />

            <corners android:radius="20dp"></corners>
        </shape></item>
    <item><shape>
            <solid android:color="@color/btn_rect_color_normal_solid" />

            <stroke android:width="1dp" android:color="@color/btn_rect_color_focused_stroke" />

            <corners android:radius="20dp"></corners>
        </shape></item>

</selector>