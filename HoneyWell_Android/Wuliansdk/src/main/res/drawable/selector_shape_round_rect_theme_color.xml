<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape>
            <solid android:color="@color/gray" />

            <padding android:bottom="10dp" android:left="35dp" android:right="35dp" android:top="10dp" />

            <corners android:radius="5dp"></corners>

            <stroke android:width="1dp" android:color="#dcdcdc"></stroke>
        </shape></item>
    <item android:state_pressed="true"><shape>
            <solid android:color="@color/theme_btn_color_pressed" />

            <padding android:bottom="10dp" android:left="35dp" android:right="35dp" android:top="10dp" />

            <corners android:radius="5dp"></corners>

            <stroke android:width="1dp" android:color="#dcdcdc"></stroke>
        </shape></item>
    <item><shape>
            <solid android:color="@color/theme_btn_color" />

            <corners android:radius="5dp"></corners>

            <padding android:bottom="10dp" android:left="35dp" android:right="35dp" android:top="10dp" />

            <stroke android:width="1dp" android:color="#dcdcdc"></stroke>
        </shape></item>

</selector>