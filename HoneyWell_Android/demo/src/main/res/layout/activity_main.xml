<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<include layout="@layout/titlebar_general" />-->
        <EditText
            android:id="@+id/et_domain_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:hint="@string/input_domain_name"
            android:layout_margin="@dimen/margin_big"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_big"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_formal_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_switch_formal"/>
            <Button
                android:id="@+id/btn_test_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_switch_test"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_web_domain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_margin="@dimen/margin_big"
            android:visibility="gone"
            android:text="@string/switch_web_domian" />
        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_margin="@dimen/margin_big"
            android:text="@string/login_newer_reg" />

        <!--<Button-->
            <!--android:id="@+id/login"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/btn_height"-->
            <!--android:layout_margin="@dimen/margin_big"-->
            <!--android:text="@string/login" />-->

        <Button
            android:id="@+id/login_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_margin="@dimen/margin_big"
            android:text="@string/login_out" />

        <Button
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_margin="@dimen/margin_big"
            android:text="@string/common_change_pwd" />

        <Button
            android:id="@+id/alarm_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_margin="@dimen/margin_big"
            android:text="@string/message_alarm_msg" />


        <Button
            android:id="@+id/alarm_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_margin="@dimen/margin_big"
            android:text="@string/replay_video" />

        <Button
            android:id="@+id/camera_manage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_margin="@dimen/margin_big"
            android:text="@string/main_device" />

        <Button
            android:id="@+id/camera_unbind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_margin="@dimen/margin_big"
            android:text="@string/setting_unbind_device" />
        <Button
            android:id="@+id/alarm_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_margin="@dimen/margin_big"
            android:text="@string/rd_01_1" />

    </LinearLayout>
</ScrollView>



